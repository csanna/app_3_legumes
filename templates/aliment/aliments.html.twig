{% extends 'base.html.twig' %}

{% block title %}Aliments{% endblock %}

{% block monTitre %}
    Liste des aliments
    {% if isCalorie %}
        avec moins de 50 calories
    {% elseif isGlucide %}
        avec moins de 5 glucides
    {% endif %}
{% endblock %}

{% block body %}
<a href="{{path("aliments")}}" button type="button" class="btn btn-success">Tous les aliments</button>
<a href="{{path("alimentsParCalorie",{"calorie":50})}}" button type="button" class="btn btn-warning">Aliments contenant moins de 50 calories aux 100g</a></button>  
<a href="{{path("alimentsParGlucides",{"glucide":5})}}" button type="button" class="btn btn-warning">Aliments contenant moins de 5 glucides aux 100g</a></button>   
    <div class="row">
        {% for aliment in aliments %}
            <div class="col-12 col-md-6 col-lg-4 col-xl-3">
                <div class="card border-primary mb-3 mx-auto" style="max-width: 20rem">
                    <div class="card-header text-center">
                        <img src="{{asset('images/' ~ aliment.image)}}" class="perso_imgAliment card-img-top">
                    </div>
                    <div class="card-body">
                        <h3 class="card-title text-center pb-2 mx-3 border-bottom border-primary">{{aliment.nom}}</h3>
                        <p class="card-text">
                            <h4 class="text-center">Prix (kilo) : {{aliment.prix}} €</h4>
                            <table class="table text-center">
                                <tr class="table-primary">
                                    <td>Propriété</td>
                                    <td>Valeur (100g)</td>
                                </tr>
                                <tr>
                                    <td>Calories</td>
                                    <td>{{aliment.calorie}}</td>
                                </tr>
                                <tr>
                                    <td>Protéines</td>
                                    <td>{{aliment.proteine}}</td>
                                </tr>
                                <tr>
                                    <td>Glucides</td>
                                    <td>{{aliment.glucide}}</td>
                                </tr>
                                <tr>
                                    <td>Lipides</td>
                                    <td>{{aliment.lipide}}</td>
                                </tr>
                            </table>
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
